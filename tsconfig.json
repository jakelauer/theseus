{
    "compileOnSave": true,
    "include": ["./src/**/*"],
    "exclude": ["./*.js", "./*.cjs", "dist"],
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./src",
        "skipLibCheck": true,
        "declaration": true,
        "allowUnusedLabels": true,
        "declarationMap": true,
        "verbatimModuleSyntax": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ESNext", "DOM"],
        "module": "ES2020",
        "moduleResolution": "node",
        "noEmit": false,
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "removeComments": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2020",
        "types": ["chai", "mocha", "node", "sinon"],
        "paths": {
			"@Broadcast/*": ["./lib/Broadcast/*"],
			"@Broadcast": ["./lib/Broadcast"],
			"@Evolvers/*": ["./lib/Evolvers/*"],
			"@Evolvers": ["./lib/Evolvers"],
			"@Observe/*": ["./lib/Observe/*"],
			"@Observe": ["./lib/Observe"],
			"@Refineries/*": ["./lib/Refineries/*"],
			"@Refineries": ["./lib/Refineries"],
			"@Shared/*": ["./lib/Shared/*"],
			"@Shared": ["./lib/Shared"],
			"@Types/*": ["./lib/Types/*"],
			"@Types": ["./lib/Types"],
			"@/*": ["./*"]
        }
    }
}
