{
    "compileOnSave": true,
    "include": ["./src/**/*"],
    "exclude": ["./*.js", "./*.cjs", "dist"],
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": ".",
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es6", "DOM"],
        "module": "ESNext",
        "moduleResolution": "node",
        "noEmit": false,
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "removeComments": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "types": ["chai", "mocha", "node", "sinon"],
        "paths": {
            "@Broadcast/*": ["./src/lib/Broadcast/*"],
            "@Evolvers/*": ["./src/lib/Evolvers/*"],
            "@Observe/*": ["./src/lib/Observe/*"],
            "@Refineries/*": ["./src/lib/Refineries/*"],
            "@Shared/*": ["./src/lib/Shared/*"],
            "@Types/*": ["./src/lib/Types/*"]
        }
    }
}
