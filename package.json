        "@types/chai-as-promised": "^7.1.8",
        "@types/deep-equal": "^1.0.4",
        "@types/deep-extend": "^0.6.2",
        "@types/deep-freeze-strict": "^1.1.2",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.25",
